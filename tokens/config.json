{
  "source": ["src/core.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./src/style-dictionary-dist/",
      "files": [{
        "destination": "core.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./src/style-dictionary-dist/",
      "files": [{
        "destination": "core.js",
        "format": "javascript/es6"
      },
      { 
        "format": "typescript/es6-declarations", 
        "destination": "core.d.ts"
      }]
    }
  }
}